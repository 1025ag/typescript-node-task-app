<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 px-3 pt-3">
            <div class="card-body">
                <form action="/tasks/create" method="POST">
                    <div class="form-group">
                        <input type="text" 
                           class="form-control" 
                           placeholder="Write your title" 
                           name="title"
                           autofocus
                    >
                    </div>
                    <div class="form-group">
                        <input type="text"
                               class="form-control"
                               name="description"
                               placeholder="Write a description" 
                        >
                        <button type="submit" class="btn btn-info btn-block mt-5">Save</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>